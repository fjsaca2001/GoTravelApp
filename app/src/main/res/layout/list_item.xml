<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:backgroundTint="#E5E5E5"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tableLayout4"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:background="#9900785D"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.110000014">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtNombreAtractivo"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="#5CA493"
                    android:text="Nombre del Atractivo: "
                    android:textAlignment="viewStart"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/obtenerAtractivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5CA493"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtNombreProvincia"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:background="#5CA493"
                    android:text="Provincia: "
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/obtenerProvincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5CA493"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtNombreParroquia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5CA493"
                    android:text="Canton:"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/obtenerCanton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5CA493"
                    android:textColor="#FFFDFD"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="#5CA493">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/editar" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>